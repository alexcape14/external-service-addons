<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_move_form_inherited" model="ir.ui.view">
        <field name="name">view.move.form.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="send_ecf_data"
                        string="Resend e-CF"
                        type="object"
                        icon="fa-refresh"
                        groups="account.group_account_invoice"
                        attrs="{'invisible' : [
                        '|', '|',
                        ('is_ecf_invoice', '=', False),
                        ('l10n_do_ecf_send_state', '=', 'delivered_accepted'),
                        ('state', '=', 'draft'),
                        ]}"/>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="after">
                <label for="l10n_do_ecf_send_state" invisible="1"/>
                <div class="o_row" col="4">
                    <field name="l10n_do_ecf_send_state"
                           widget="label_selection"
                           attrs="{'invisible': [('is_ecf_invoice', '=', False)]}"
                           options="{'classes': {
                           'to_send': 'default',
                           'invalid': 'danger',
                           'delivered_accepted': 'success',
                           'delivered_pending': 'warning',
                           'delivered_refused': 'danger',
                           'not_sent': 'warning',
                           'service_unreachable': 'warning',
                           }}"
                    />
                </div>
            </xpath>
        </field>
    </record>

</odoo>
