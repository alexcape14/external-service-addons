<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_do_external_validation_rnc_view_partner_form" model="ir.ui.view">
        <field name="name">l10n.do.external.validation.rnc.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="name" default_focus="1" placeholder="Nombre, RNC o Cédula" widget="dgii_autocomplete"/>
            </field>
            <xpath expr="//sheet/div/h1/field[@name='name']" position="after">
                <li t-name="ncf_autocomplete.users_autocomplete_element">
                    <div role="menuitem" href="#"
                    t-attf-class="dropdown-item o_ncf_autocomplete_suggestion clearfix#{suggestion_index == 0 and ' active' or ''}">
                        <div class="o_ncf_autocomplete_info">
                            <strong><span class="o_ncf_autocomplete_info_name">
                            <t t-esc="suggestion['name']" />
                            </span></strong>
                        <br/>
                            <span><small t-esc="suggestion['description']" /></span>
                        </div>
                    </div>
                </li>
            </xpath>
        </field>
    </record>

    <record id="l10n_do_external_validation_rnc_view_res_partner_filter" model="ir.ui.view">
        <field name="name">l10n.do.external.validation.rnc.view.res.partner.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="vat" string="RNC/Cédula"/>
            </xpath>
        </field>
    </record>

</odoo>
